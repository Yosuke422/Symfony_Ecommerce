{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
 <td>
                    {% if produit.photo is not null %}
                    <img src="{{ asset('uploads/'~ produit.photo)}}" style= "max-width: 100px;">
                    {% endif %}
                </td>            
                </tr>
        </tbody>
    </table>
    {{ form_start(form_addToCart) }}
    {{ form_row(form_addToCart.quantiter) }}
    {{ form_row(form_addToCart.AjouterAuPanier) }}
    {{ form_end(form_addToCart) }}
    
    <a href="{{ path('app_produit') }}">back to list</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
