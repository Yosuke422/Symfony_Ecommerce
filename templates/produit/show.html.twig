{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    {{ include('nav/_nav.html.twig') }}
    <h1>{{ produit.nom }}</h1>

    <a href="{{ path('app_produit') }}">retour </a>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    {% if produit.photo is not null %}
                    <img src="{{ asset('uploads/'~ produit.photo)}}" style= "max-width: 100px;">
                    {% endif %}
                </td>            
                </tr>
        </tbody>
    </table>
    
    <a href="{{ path('app_produit_add', {'id': produit.id}) }}">Ajouter au panier</a>

        {% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
{% endif %}
    {% if is_granted('ROLE_ADMIN') %}
    {{ include('produit/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
