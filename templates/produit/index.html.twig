{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
<p>{{app.user.email}}</p>
    <nav>
        <ul>
        <li>
        <a href = "{{ path('app_compte')}}">Mon Compte</a>
        </li>
        <li>
        <a href = "{{ path('app_contenu_panier_index') }}">Panier</a>
        </li>
         <li>
        <a href = "{{ path('app_register') }}">register</a>
        </li>
         <li>
        <a href = "{{ path('app_login') }}">login</a>
        </li>
        </ul>
    </nav>
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>
 <td>
                    {% if produit.photo is not null %}
                    <img src="{{ asset('uploads/'~ produit.photo)}}" style= "max-width: 100px;">
                    {% endif %}
                </td>                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
