{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
{% if app.user is not null %}
<p>{{app.user.email}}</p>
{% endif %}
    {{ include('nav/_nav.html.twig') }}

    <h1>Selection de produit</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>
                <td>
                    {% if produit.photo is not null %}
                    <img src="{{ asset('uploads/'~ produit.photo)}}" style= "max-width: 100px;">
                    {% endif %}
                </td>                
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">Voir</a>
                            {% if is_granted('ROLE_ADMIN') %}

                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>
                        {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun produit trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        {% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('app_produit_new') }}">Créer un produit</a>
    {% endif %}
{% endblock %}
