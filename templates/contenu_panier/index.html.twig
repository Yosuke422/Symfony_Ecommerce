{% extends 'base.html.twig' %}

{% block title %}ContenuPanier index{% endblock %}

{% block body %}
 <nav>
        <ul>
        <li>
        <a href = "{{ path('app_produit') }}">Produits</a>
        </li>
        </ul>
</nav>
    <h1>ContenuPanier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Photo</th>
                <th>quantite</th>
                <th>DateAjout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contenu_panier in contenu_paniers %}
